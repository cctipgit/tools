<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="12dp"
    app:rv_backgroundColor="@color/search_edit_bg"
    app:rv_cornerRadius="52dp">

    <com.hash.coinconvert.widget.AppEditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/search_currency_hint"
        android:imeOptions="actionSearch"
        android:maxLength="50"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="50dp"
        android:singleLine="true"
        android:textColor="@color/theme_text_color"
        android:textColorHint="@color/search_edit_hint"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="6dp"
        android:padding="10dp"
        android:src="@mipmap/ic_search"
        android:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_clear_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="6dp"
        android:padding="10dp"
        android:src="@mipmap/ic_edit_clear"
        android:tint="@color/white"
        android:visibility="gone"
        tools:visiblity="visible" />

</com.flyco.roundview.RoundFrameLayout>