<?xml version="1.0" encoding="utf-8"?>

<com.hash.coinconvert.widget.ColoredLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rate_quote_green"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/black" />

        <TextView
            android:id="@+id/tv_symbol"
            style="@style/TextView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="marquee"
            android:maxWidth="80dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/img_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="USDT" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxWidth="80dp"
            android:textColor="@color/sub_title"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_symbol"
            app:layout_constraintTop_toBottomOf="@+id/tv_symbol"
            tools:text="Tether" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="83dp"
            android:src="@drawable/ic_item_token_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/theme_text_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextView.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:ellipsize="marquee"
            android:gravity="end"
            android:lineHeight="28dp"
            android:textSize="20sp"
            tools:text="12" />

        <EditText
            android:id="@+id/edit_text"
            style="@style/TextView.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|end"
            android:imeOptions="actionNone"
            android:imeActionLabel="@string/qa_btn_done"
            android:inputType="numberDecimal"
            android:lineHeight="28dp"
            android:padding="0dp"
            android:textColor="@color/theme_text_color"
            android:textSize="20sp"
            tools:text="100" />
    </FrameLayout>
</com.hash.coinconvert.widget.ColoredLayout>
