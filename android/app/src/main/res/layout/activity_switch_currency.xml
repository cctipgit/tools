<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hash.coinconvert.widget.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:abTitle="@string/switch_currency" />

    <com.hash.coinconvert.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.duxl.baselib.widget.SmartRecyclerView
            android:id="@id/smart_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="64dp" />

        <com.hash.coinconvert.widget.SideBar
            android:id="@+id/side_bar"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginVertical="50dp"
            android:layout_marginEnd="20dp" />
    </FrameLayout>
</LinearLayout>