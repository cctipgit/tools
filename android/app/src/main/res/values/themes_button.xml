<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/btn_primary</item>
    </style>

    <style name="Button.round4">
        <item name="android:buttonCornerRadius">4dp</item>
    </style>

    <style name="Button.TaskDo">
        <item name="android:background">@drawable/btn_blue_ripple</item>
        <item name="android:textColor">@color/btn_task_check</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="Button.primary">
        <item name="android:background">@drawable/btn_blue_ripple_r24</item>
        <item name="android:textColor">@color/btn_task_check</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>